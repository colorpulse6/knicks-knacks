{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "../src/**/*.ts",
        "../src/**/*.js",
        "../src/**/*.mjs"
    ],
    "exclude": [
        "node_modules"
    ]
}