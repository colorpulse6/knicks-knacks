{
  "extends": "../../../packages/config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": "src",
    "jsx": "preserve",
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "app", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
